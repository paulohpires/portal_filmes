<h2 class="text-3xl font-bold mb-6">Minha lista de filmes </h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% @movies.each do |movie| %>
    <div class="bg-white rounded-xl shadow-md p-4 hover:shadow-lg transition">
      <h3 class="text-xl font-semibold mb-2"><%= movie.title %></h3>
      <p class="text-gray-500 mb-1">Ano: <%= movie.release_year %></p>
      <p class="text-sm text-gray-700 mb-4"><%= truncate(movie.description, length: 100) %></p>
      <%= link_to "Ver detalhes", movie_path(movie), class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>
